<p id="notice"><%= notice %></p>

<h1>Game Players</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Game</th>
      <th>Start inning</th>
      <th>End inning</th>
      <th>Position</th>
      <th>Jersey number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_players.each do |game_player| %>
      <tr>
        <td><%= game_player.player_id %></td>
        <td><%= game_player.game_id %></td>
        <td><%= game_player.start_inning %></td>
        <td><%= game_player.end_inning %></td>
        <td><%= game_player.fielding_position %></td>
        <td><%= game_player.batting_order_position %></td>
        <td><%= game_player.jersey_number %></td>
        <td><%= link_to 'Show', game_player %></td>
        <td><%= link_to 'Edit', edit_game_player_path(game_player) %></td>
        <td><%= link_to 'Destroy', game_player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

